# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/autoport

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=AutoPort API
APP_VERSION=0.1.0
ENVIRONMENT=development

# API Settings (optional)
API_V1_STR=/api/v1
PROJECT_NAME=AutoPort

# CORS Settings (optional, for frontend development)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# First Admin User (optional, for setup scripts)
FIRST_ADMIN_PHONE=+998901234567
FIRST_ADMIN_NAME=Admin User

# SMS Gateway Settings (for future implementation)
SMS_GATEWAY_API_KEY=
SMS_GATEWAY_URL=

# Logging
LOG_LEVEL=INFO